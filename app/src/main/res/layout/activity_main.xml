<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/gnss_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定位信息"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/gnss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@id/gnss_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/gnss_title"
        app:layout_constraintBottom_toBottomOf="@id/gnss_title" />

    <TextView
        android:id="@+id/imu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMU信息"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/gnss_title"
        app:layout_constraintLeft_toLeftOf="@id/gnss_title" />

    <TextView
        android:id="@+id/imu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@id/imu_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imu_title"
        app:layout_constraintBottom_toBottomOf="@id/imu_title" />

</androidx.constraintlayout.widget.ConstraintLayout>